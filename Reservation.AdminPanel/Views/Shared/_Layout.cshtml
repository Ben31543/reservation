<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reservation.AdminPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="header">

            <div class="left">
                <div>
                    <img class="logo" src="~/Images/App/reservation.png" alt="BookingsLogo" />
                </div>
            </div>

            <div class="right">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Admin" asp-action="ServiceMembers">Service Members</a>
                    </li>
                </ul>
            </div>

            <div class="flags">
                <img src="~/Images/App/united-kingdom.png" alt="ENG" />
                <img src="~/Images/App/russia.png" alt="RU" />
                <img src="~/Images/App/armenia.png" alt="ARM" />
            </div>

            <div>
                <a asp-action="Logout" asp-controller="Admin">Log out</a>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<footer>
    <div class="footertext">
        Admin Panel, Online Reservation Services App, @DateTime.Now.Year
    </div>
</footer>
</html>
